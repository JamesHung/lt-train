package climbingstairs

import "fmt"

const debugClimbingStairs = false

// climbStairs returns the number of distinct ways to reach step n.
func climbStairs(n int) int {
	if n <= 2 {
		return n
	}

	prev2, prev1 := 1, 2
	for step := 3; step <= n; step++ {
		curr := prev1 + prev2
		if debugClimbingStairs {
			fmt.Printf("step=%d curr=%d\n", step, curr)
		}
		prev2, prev1 = prev1, curr
	}

	return prev1
}
